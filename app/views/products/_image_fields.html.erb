<p class:"fields">
  <%= f.label "Image" %>

  <% if f.object.image_url %>
  	<%= image_tag f.object.image_url(:thumb).to_s if f.object.image? %>
  <% else %>
  	<%= f.file_field :image %>  
  <% end %>

  <%= f.label :description %>
  <%= f.text_area :description, rows: 3 %>
  <br />
  <%= f.link_to_remove "Remove this image" %>
</p>